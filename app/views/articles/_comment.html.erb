<%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <div>
        <%= form.label :commenter %><br>
            <%= form.text_field :commenter %>
                <% @article.comments.build.errors.full_messages_for(:commenter).each do |message| %>
                    <div>
                        <%= message %>
                    </div>
                    <% end %>
    </div>

    <div>
        <%= form.label :body %><br>
            <%= form.text_field :body %>
                <% @article.comments.build.errors.full_messages_for(:body).each do |message| %>
                    <div>
                        <%= message %>
                    </div>
                    <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
    <% end %>